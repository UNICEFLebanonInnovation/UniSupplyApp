<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollview">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/layout_kitList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:text=""
            android:id="@+id/name" android:layout_gravity="center_horizontal" android:paddingBottom="10dp"/>




        <ImageView
            android:background="@drawable/abc_item_background_holo_dark"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="id number:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distribution Details:"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"  android:paddingBottom="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Intervention:"
                android:textSize="20sp"

                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_intervention"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"  android:paddingBottom="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/institution_type"
                android:textSize="20sp"

                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_institutionType"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                />

        </LinearLayout>

