<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="match_parent">

    <ImageView android:tag="voucherStatus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

            />
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView android:tag="name"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:text="N/A"
                  android:textSize="20dp"
                />
        <TextView android:tag="age"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:text="N/A"
                  android:textSize="20dp"
                />
        <TextView android:tag="gender"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:text="N/A"
                  android:textSize="20dp"
                />
        <TextView android:tag="voucherCode"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:text="N/A"
                  android:textSize="20dp"
                />


    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:tag="parentTag"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:clickable="true" android:focusable="false">

        <Button android:layout_width="100dp" android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" android:text="Add Barcode"  android:tag="addVoucherCode" android:focusable="false" android:background="@drawable/custombutton"/>

    </LinearLayout>

</LinearLayout>