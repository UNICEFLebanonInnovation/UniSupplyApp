<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add a Comment"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView" android:layout_gravity="center_horizontal" android:paddingBottom="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Comment"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:layout_margin="20dp"
        android:id="@+id/editText_comment" android:layout_gravity="center_horizontal" android:paddingBottom="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Comment"
        android:textSize="25sp"
        android:background="@drawable/custombutton_green"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/button_comment" android:layout_gravity="center_horizontal" android:paddingBottom="20dp"/>




</LinearLayout>