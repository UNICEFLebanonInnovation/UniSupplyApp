<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cv"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="1dp"
            android:paddingEnd="1dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"

            >

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/item_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src ="@drawable/unisuppylogobig"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/item_forced"
                android:background="@drawable/custombutton_red"
                android:layout_margin="12.5dp"
                android:visibility="gone"
                android:layout_below="@id/item_photo"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doc_name"
                android:text="Test"
                android:layout_marginRight="40dp"

                android:layout_toRightOf="@+id/item_photo"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_name"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@+id/item_photo"
                android:textSize="15sp"
                android:layout_below="@+id/doc_name"

                />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:id="@+id/amount_left"
                android:text="Test"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="60dp"
                android:layout_toRightOf="@+id/item_photo"
                android:layout_below="@+id/location_name"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/item_photo"
                android:layout_below="@+id/amount_left"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/intervention_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/item_photo"
                android:layout_below="@+id/item_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/percentage"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/critical"
                android:layout_below="@+id/location_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/creation_date"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"

                android:layout_below="@+id/percentage"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/critical"
                android:background="@color/green"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>