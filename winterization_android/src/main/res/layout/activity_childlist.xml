<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="1.6">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Child List"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView" android:layout_gravity="center_horizontal" android:paddingBottom="20dp"/>

    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:id="@+id/child_list"/>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/add_child"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/custombutton"
        android:id="@+id/add_child_btn"/>

</LinearLayout>